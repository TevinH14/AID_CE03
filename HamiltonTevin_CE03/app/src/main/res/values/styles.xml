<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textStyleBold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textStyleNormal">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="frameLayoutMain">
        <item name="android:background">@color/purple_color</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="imageViewProps">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:contentDescription">@string/todo</item>
    </style>

    <style name="radioBtnBackgroundColorSelector">
       <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

   <style name="frameLayoutMain.port">
       <item name="android:layout_width">200dp</item>
       <item name="android:layout_height">200dp</item>
       <item name="android:layout_marginTop">16dp</item>
       <item name="android:layout_marginStart">106dp</item>
       <item name="android:layout_marginEnd">106dp</item>
   </style>

    <style name="frameLayoutMain.land">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">68dp</item>
        <item name="android:layout_marginBottom">68dp</item>
        <item name="android:layout_height">275dp</item>
        <item name="android:layout_width">275dp</item>
    </style>

    <style name="frameLayoutTextViewMain">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:text">@string/text_appears</item>
        <item name="android:textColor">@color/green_color</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
